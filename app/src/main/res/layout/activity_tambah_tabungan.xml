<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahTabungan">

    <View
        android:id="@+id/viewTopBackground3"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/vector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tombol Kembali -->
    <ImageButton
        android:id="@+id/btn_back2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="@drawable/tombol_back"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/edt_judul_tabungan"
        android:layout_width="266dp"
        android:layout_height="57dp"
        android:background="@drawable/view_shape"
        android:fontFamily="@font/poppins_bold"
        android:hint="Judul Tabungan"
        android:paddingHorizontal="15dp"
        android:paddingVertical="9dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back2"
        android:layout_marginTop="120dp"/>

    <EditText
        android:id="@+id/edt_keterangan"
        android:layout_width="368dp"
        android:layout_height="357dp"
        android:background="@drawable/view_shape"
        android:fontFamily="@font/poppins_bold"
        android:gravity="top"
        android:hint="Keterangan"
        android:inputType="textMultiLine"
        android:minLines="5"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/edt_judul_tabungan"
        android:layout_marginTop="65dp"/>

    <EditText
        android:id="@+id/edt_target"
        android:layout_width="369dp"
        android:layout_height="57dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/view_shape"
        android:fontFamily="@font/poppins_bold"
        android:hint="Target"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btnTambahkanTabungan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTambahkanTabungan"
        android:layout_width="284dp"
        android:layout_height="42dp"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_bold"
        android:padding="12dp"
        android:text="Tambahkan Tabungan"
        android:textColor="@color/background"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
